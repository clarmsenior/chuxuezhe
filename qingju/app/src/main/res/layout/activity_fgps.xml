<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayn.qingju.loginregister.FgpsActivity">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="587dp"
        android:background="@color/beijingse"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"

        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:background="@drawable/shape_zhaiwu"
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="18sp"
            android:textColor="@color/touming"
            android:layout_below="@+id/linearLayout4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp" />

        <include layout="@layout/title_zidingyi"
           />

        <LinearLayout
            android:background="@color/text_blue"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:id="@+id/linearLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/touming">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:textSize="18sp"
                    android:text="手机号" />
                <EditText
                    android:id="@+id/phone_forget"
                    android:layout_marginLeft="80dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <include
                    layout="@layout/divider_line"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@color/touming"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:background="@drawable/shape_zhaiwu"
                    android:id="@+id/btn_sendcode_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送验证码"
                    android:textColor="@color/touming"
                    android:layout_alignBaseline="@+id/checkcode"
                    android:layout_alignBottom="@+id/checkcode"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="9dp"
                    android:layout_marginEnd="9dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:textSize="18sp"
                    android:text="验证码" />
                <EditText
                    android:id="@+id/checkcode"
                    android:layout_marginLeft="80dp"
                    android:background="@null"
                    android:layout_width="170dp"
                    android:layout_height="match_parent" />
                <include
                    layout="@layout/divider_line"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@color/touming"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:textSize="18sp"
                    android:text="新密码" />
                <EditText

                    android:id="@+id/newpassword"
                    android:layout_marginLeft="80dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <include
                    layout="@layout/divider_line"/>

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
