<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayn.qingju.loginregister.UserselectActivity">
  <RelativeLayout
      android:background="@color/touming"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:layout_constraintTop_creator="1"
      tools:layout_constraintRight_creator="1"
      tools:layout_constraintBottom_creator="1"
      android:layout_marginStart="0.1dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginEnd="0.1dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="0.1dp"
      tools:layout_constraintLeft_creator="1"
      android:layout_marginBottom="0.1dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="0.1dp"
      android:layout_marginRight="0.1dp">
    <include layout="@layout/title_zidingyi"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="71dp">

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:id="@+id/linearLayout6">
          <TextView
              android:paddingBottom="1dp"
              android:layout_marginTop="25dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="请选择你要注册的用户类型"
              android:textSize="21dp"
              android:gravity="center"/>
        </LinearLayout>

      <Button
          android:id="@+id/btn_person"
          android:background="@drawable/personselect"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/linearLayout6"
          android:layout_marginLeft="56dp"
          android:layout_marginStart="56dp"
          android:layout_marginTop="86dp"
          android:text="" />

      <Button
          android:id="@+id/btn_shops"
          android:background="@drawable/shopsselcet"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_alignTop="@+id/btn_person"
          android:layout_marginEnd="56dp"
          android:layout_marginRight="56dp"
          android:text="" />

      <TextView
          android:id="@+id/textView19"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignEnd="@+id/btn_person"
          android:layout_alignRight="@+id/btn_person"
          android:layout_below="@+id/btn_person"
          android:layout_marginEnd="28dp"
          android:layout_marginRight="28dp"
          android:layout_marginTop="21dp"
          android:text="个人" />


    </RelativeLayout>



  </RelativeLayout>

</android.support.constraint.ConstraintLayout>
