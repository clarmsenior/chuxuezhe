<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayn.qingju.loginregister.AlipaybindActivity">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="0.1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="0.1dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="0.1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="0.1dp"
            android:layout_marginRight="0.1dp">
            <include layout="@layout/title_zidingyi"
              />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:background="@color/beijingse"
                >

                <Button
                    android:id="@+id/btn_querenbangding"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="确认绑定"
                    android:textColor="@color/touming"
                    android:background="@drawable/shape_zhaiwu"
                    android:layout_below="@+id/linearLayout3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="224dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout3">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/touming">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:textSize="18sp"
                            android:text="支付宝账号" />
                        <EditText
                            android:id="@+id/lipayaccount"
                            android:layout_marginLeft="110dp"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <include
                            layout="@layout/divider_line"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/touming">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:textSize="18sp"
                            android:text="收款人信息" />
                        <EditText
                            android:id="@+id/receiverinfo"
                            android:layout_marginLeft="110dp"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <include
                            layout="@layout/divider_line"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="@color/touming"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:background="@drawable/shape_zhaiwu"
                            android:id="@+id/btn_sendcode_alipay"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:text="发送验证码"
                            android:textColor="@color/touming"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentEnd="true" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:textSize="18sp"
                            android:text="验证码"
                            android:id="@+id/checkcode_alipay" />
                        <EditText
                            android:id="@+id/alipay_code"
                            android:layout_marginLeft="80dp"
                            android:background="@null"
                            android:layout_width="170dp"
                            android:layout_height="match_parent" />
                        <include
                            layout="@layout/divider_line"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
</android.support.constraint.ConstraintLayout>
